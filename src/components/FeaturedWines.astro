---
const wines = [
  {
    id: 'wine-1',
    name: 'Malbec Reserva 2020',
    winery: 'Bodega del Valle',
    price: 6500,
    image: 'https://images.unsplash.com/photo-1586370434639-0fe43b2d32d6',
    description: 'Intenso y elegante, con notas de frutos rojos maduros',
    rating: 4.5,
  },
  {
    id: 'wine-2',
    name: 'Cabernet Sauvignon Premium',
    winery: 'Viñas del Sur',
    price: 7800,
    image: 'https://images.unsplash.com/photo-1510812431401-41d2bd2722f3',
    description: 'Complejo y estructurado, con taninos sedosos',
    rating: 4.8,
  },
  {
    id: 'wine-3',
    name: 'Torrontés Selección',
    winery: 'Alta Vista',
    price: 4900,
    image: 'https://images.unsplash.com/photo-1558401391-7899b4bd5bbf',
    description: 'Aromático y fresco, con notas florales y cítricas',
    rating: 4.3,
  },
];

const formatPrice = (price: number) => {
  return new Intl.NumberFormat('es-AR', {
    style: 'currency',
    currency: 'ARS',
    minimumFractionDigits: 0,
  }).format(price);
};
---

<div class="space-y-8">
  <!-- Filtros -->
  <div class="flex gap-4">
    <button class="bg-rose-900 text-white px-4 py-2 rounded-lg">Todos los Vinos</button>
    <button class="text-gray-600 hover:text-rose-900 px-4 py-2">Vinos Tintos</button>
    <button class="text-gray-600 hover:text-rose-900 px-4 py-2">Vinos Blancos</button>
  </div>

  <!-- Lista de vinos -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {
      wines.map((wine) => (
        <div class="bg-white rounded-lg p-6 shadow-sm hover:shadow-lg transition-shadow">
          <div class="flex flex-col">
            <h3 class="text-xl font-semibold">{wine.name}</h3>
            <p class="text-gray-600 text-sm mb-1">{wine.winery}</p>
            <p class="text-gray-700 mb-4">{wine.description}</p>
            
            <div class="flex justify-between items-center mt-auto">
              <span class="text-rose-900 font-medium">
                {formatPrice(wine.price)}
              </span>
              <button 
                class="bg-rose-900 text-white px-4 py-2 rounded-lg
                       hover:bg-rose-800 active:bg-rose-950 transition-colors
                       flex items-center gap-2"
              >
                Agregar al Carrito
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>
