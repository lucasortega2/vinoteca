---
import { Image } from 'astro:assets';
import cabernetSauvignon from '../assets/cabernet-sauvignon.jpg';
import chardonnayReserve from '../assets/chardonnay-reserve.jpg';

const wines = [
  {
    id: 1,
    name: "Cabernet Sauvignon",
    winery: "Chateau Excellence",
    type: "red",
    price: 49.99,
    description: "Full-bodied with rich black fruit flavors",
    image: cabernetSauvignon
  },
  {
    id: 2,
    name: "Chardonnay Reserve",
    winery: "Valley Vineyards",
    type: "white",
    price: 39.99,
    description: "Buttery and oak-aged with vanilla notes",
    image: chardonnayReserve
  }
];
---

<div class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-playfair text-center mb-12">
      Featured Wines
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {wines.map((wine) => (
         <a href="/vinos" class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300 group">
          <div class="aspect-[3/4] relative overflow-hidden">
            <Image
              transition:name={`image-${wine.name}`}
              src={wine.image}
              alt={wine.name}
              width={400}
              height={533}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-102"
            />
          </div>

          <div class="flex flex-col flex-grow p-6">
            <h3 class="text-2xl font-playfair font-semibold mb-3" transition:name={`wine-${wine.name}`}>{wine.name}
            </h3>
            <p class="text-gray-600 mb-4 flex-grow">{wine.description}</p>

            <div class="mb-6">
              <h4 class="font-medium mb-1 text-wine">Winery:</h4>
              <p class="text-gray-600">{wine.winery}</p>
            </div>

            <div class="flex items-center justify-between mt-auto">
              <span class="text-xl font-bold text-wine">${wine.price}</span>
              <button
                class="inline-flex items-center px-6 py-2 bg-wine text-white rounded-full hover:bg-wine/90 transition-colors duration-300"
              >
                Add to Cart
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="2"
                  stroke="currentColor"
                  class="ml-2 w-5 h-5"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                  />
                </svg>
              </button>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/vinos"
        class="inline-flex items-center px-6 py-3 border-2 border-wine text-wine hover:bg-wine hover:text-white transition-all duration-300 rounded-full font-medium"
      >
        View All Wines
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
        </svg>
      </a>
    </div>
  </div>
</div>