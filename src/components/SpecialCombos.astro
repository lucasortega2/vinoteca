---
import { Image } from 'astro:assets';
import premiumRedCollection from '../assets/Premium-Red-Collection.jpg';
import summerWhites from '../assets/summer-whites.jpg';
const combos = [
  {
    title: 'Premium Red Collection',
    image: premiumRedCollection,
    description: 'Great for summer',
    price: 29.99,
    includedWines: ['Red Wine', 'White Wine'],
  },

  {
    title: 'Summer Whites',
    description: 'Perfect wines for warm days',
    image: summerWhites,
    price: 59.99,
    includedWines: [
      'Chardonnay 2021',
      'Sauvignon Blanc 2022',
      'Pinot Grigio 2021',
    ],
  },
];
---

<div class="py-16 bg-white mb-12">
  
  <div class="container mx-auto px-4">
   
    <h2 class="text-4xl  text-center mb-12">
      Featured Wine Combos
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        combos.map((combo) => (
          <a href="/combos" class="bg-white rounded-3xl overflow-hidden shadow-lg hover:shadow-2xl transition-shadow duration-300 group">
            <div class="aspect-[4/3] overflow-hidden ">
              <Image
              transition:name={`image-${combo.title}`}
              width={800}
              height={400}
                src={combo.image}
                alt={combo.title}
                class=" object-cover transition-transform duration-300 group-hover:scale-102"
              />
            </div>
            <div class="p-8">
              <h3 transition:name={`title-${combo.title}`} class="text-2xl font-semibold mb-2">{combo.title}</h3>
              <p class="text-gray-600 mb-6">{combo.description}</p>

              <div class="mb-6">
                <h4 class="font-medium mb-2">Included Wines:</h4>
                <ul class="space-y-1 text-gray-600">
                  {combo.includedWines.map((wine) => (
                    <li>{wine}</li>
                  ))}
                </ul>
              </div>

              <div class="flex justify-between items-center">
                <span class="text-rose-900 text-2xl font-semibold">
                  ${combo.price}
                </span>
                <button
                  class="bg-rose-900 text-white px-6 py-2.5 rounded-lg 
                         hover:bg-rose-800 active:bg-rose-950 transition-colors
                         flex items-center gap-2"
                >
                  Add to Cart
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="2"
                    stroke="currentColor"
                    class="w-5 h-5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                    />
                  </svg>
                </button>
              </div>
            </div>
          </a>
        ))
      }
    </div>

    <div class="text-center mt-12">
      <a
        href="/combos"
        class="inline-flex items-center px-6 py-3 border-2 border-wine text-wine hover:bg-wine hover:text-white transition-all duration-300 rounded-full font-medium"
      >
        View All Combos
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-5 h-5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"></path>
        </svg>
      </a>
    </div>
  </div>
</div>
